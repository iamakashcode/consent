generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  isAdmin   Boolean  @default(false)
  
  // User-level trial (14 days for new users)
  // All domains share this trial period
  trialStartedAt    DateTime?
  trialEndAt        DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sites     Site[]
  pendingDomains PendingDomain[]

  @@map("users")
}

model Site {
  id                String        @id @default(cuid())
  domain            String
  siteId            String        @unique
  userId            String
  trackers          Json          @default("[]")
  bannerConfig      Json?
  isVerified        Boolean       @default(false)
  verificationToken String?
  verifiedAt        DateTime?
  lastSeenAt        DateTime?
  
  // Note: Trial is now user-level, not domain-level
  // Domain-level trial fields kept for backward compatibility but not used
  
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  siteViewCounts    SiteViewCount[]
  sitePathViewCounts SitePathViewCount[]
  consentLogs       ConsentLog[]
  subscription      Subscription?

  @@unique([userId, domain])
  @@map("sites")
}

// Domain awaiting payment - converted to Site only when payment succeeds
model PendingDomain {
  id                    String   @id @default(cuid())
  userId                String
  domain                String
  siteId                String   @unique  // pre-generated so plans/checkout can use it
  trackers              Json     @default("[]")
  verificationToken     String
  plan                  String   @default("basic")
  billingInterval       String   @default("monthly")
  paddleTransactionId   String?  // Paddle txn id from checkout; webhook finds by this when custom_data is missing
  createdAt             DateTime @default(now())
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, domain])
  @@map("pending_domains")
}

// Lightweight page view counting: one row per site per calendar month instead of one per view
model SiteViewCount {
  id         String   @id @default(cuid())
  siteId     String
  periodStart DateTime // first day of month (UTC)
  count      Int      @default(0)
  updatedAt  DateTime @updatedAt
  site       Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)

  @@unique([siteId, periodStart])
  @@index([siteId])
  @@map("site_view_counts")
}

// One row per site per month per path: unique pages + per-path view count without storing every view
model SitePathViewCount {
  id          String   @id @default(cuid())
  siteId      String
  periodStart DateTime
  pagePath    String   // path only, max 2048
  count       Int      @default(0)
  updatedAt   DateTime @updatedAt
  site        Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)

  @@unique([siteId, periodStart, pagePath])
  @@index([siteId])
  @@map("site_path_view_counts")
}

model ConsentLog {
  id        String   @id @default(cuid())
  siteId    String
  status    String   // "accepted" | "rejected"
  visitorIp String?
  pageUrl   String?  @db.Text
  createdAt DateTime @default(now())
  site      Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)

  @@index([siteId])
  @@index([siteId, createdAt])
  @@map("consent_logs")
}

model Subscription {
  id                     String    @id @default(cuid())
  siteId                 String    @unique
  
  plan                   String    @default("basic") // basic, starter, pro
  billingInterval        String    @default("monthly") // monthly, yearly
  status                 String    @default("pending") // pending, trial, active, cancelled, expired, payment_failed
  currentPeriodStart     DateTime?
  currentPeriodEnd       DateTime?
  cancelAtPeriodEnd      Boolean   @default(false)
  
  // Paddle fields
  paddleSubscriptionId String?
  paddlePriceId        String?
  paddleProductId      String?
  paddleCustomerId     String?
  paddleTransactionId  String?

  // Add-on: remove "Powered by" branding from banner ($3/mo)
  removeBrandingAddon  Boolean   @default(false)
  paddleAddonSubscriptionId String? // add-on subscription id when purchased

  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
  site                   Site      @relation(fields: [siteId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}
