generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sites     Site[]

  @@map("users")
}

model Site {
  id                String        @id @default(cuid())
  domain            String
  siteId            String        @unique
  userId            String
  trackers          Json          @default("[]")
  bannerConfig      Json?
  isVerified        Boolean       @default(false)
  verificationToken String?
  verifiedAt        DateTime?
  lastSeenAt        DateTime?
  
  // Domain-level trial (each domain gets its own 7-day trial)
  trialStartedAt    DateTime?
  trialEndAt        DateTime?
  
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  pageViews         PageView[]
  subscription      Subscription?

  @@unique([userId, domain])
  @@map("sites")
}

model PageView {
  id        String   @id @default(cuid())
  siteId    String
  site      Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)
  pagePath  String
  pageTitle String?
  viewedAt  DateTime @default(now())
  userAgent String?
  referer   String?

  @@index([siteId, viewedAt])
  @@index([siteId, pagePath])
  @@map("page_views")
}

model Subscription {
  id                     String    @id @default(cuid())
  siteId                 String    @unique
  
  plan                   String    @default("basic")
  status                 String    @default("pending") // pending, trial, active, cancelled, expired, payment_failed
  currentPeriodStart     DateTime?
  currentPeriodEnd       DateTime?
  cancelAtPeriodEnd      Boolean   @default(false)
  
  // Razorpay fields
  razorpaySubscriptionId String?
  razorpayPlanId         String?
  razorpayPaymentId      String?
  razorpaySignature      String?
  razorpayOrderId        String?
  
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
  site                   Site      @relation(fields: [siteId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}
